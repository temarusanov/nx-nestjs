    "@nestjs/common": "10.2.7",
    "@nestjs/core": "10.2.7",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/testing": "10.2.7",
    "@prisma/client": "^5.5.2",
    "@tinybudgie/nats": "^0.1.1",
    "@tinybudgie/health-checks": "^0.1.0",
    "@tinybudgie/logger": "^0.1.0",
    "axios": "^1.6.0",
    "env-var": "^7.4.1",
    "graphql": "^16.8.1",
    "nats": "^2.17.0",
    "nestjs-spelunker": "^1.3.0",
