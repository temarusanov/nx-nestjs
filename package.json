    "@eslint/eslintrc": "^2.1.1",
    "@jscutlery/semver": "^4.0.0",
    "@nestjs/schematics": "^10.0.2",
    "@nx/devkit": "17.0.1",
    "@nx/eslint-plugin": "17.0.1",
    "@nx/jest": "17.0.1",
    "@nx/js": "17.0.1",
    "@nx/nest": "17.0.1",
    "@nx/node": "17.0.1",
    "@nx/plugin": "17.0.1",
