    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.53.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.0.2",
    "nx": "17.0.1",
    "prettier": "^2.8.8",
    "prisma": "^5.5.2",
    "ts-jest": "29.1.1",
