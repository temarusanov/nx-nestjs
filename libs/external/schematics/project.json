{
  "name": "schematics",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/external/schematics/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "clean": true,
        "outputPath": "dist/libs/external/schematics",
        "main": "libs/external/schematics/src/index.ts",
        "tsConfig": "libs/external/schematics/tsconfig.lib.json",
        "assets": [
          "libs/external/schematics/*.md",
          {
            "input": "./libs/external/schematics/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/external/schematics/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/external/schematics",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/external/schematics",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "dependsOn": ["build"],
      "command": "node tools/scripts/publish.mjs schematics {args.ver} {args.tag}"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/external/schematics/**/*.ts",
          "libs/external/schematics/generators.json",
          "libs/external/schematics/executors.json",
          "libs/external/schematics/package.json",
          "libs/external/schematics/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/external/schematics/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
