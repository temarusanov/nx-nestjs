{
  "name": "sample",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/sample/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/sample/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/sample/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "prisma:generate": {
      "executor": "schematics:prisma-generate",
      "outputs": ["{workspaceRoot}/node_modules/@prisma/sample-client"]
    },
    "prisma:pull": {
      "executor": "schematics:prisma-pull"
    },
    "prisma:migrate": {
      "executor": "schematics:prisma-migrate"
    }
  },
  "tags": []
}
